<%= form_with url: "/merchant/#{@bulk_discount.merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, :value => @bulk_discount.percentage %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, :value => @bulk_discount.quantity_threshold %>
  <%= f.submit 'Submit'%>
<% end %>