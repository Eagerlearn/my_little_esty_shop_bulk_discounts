<h1>Merchant Bulk Discount Index Page</h1>

<%= link_to "Create a New Discount", "/bulk_discounts/new" %>

<% @bulk_discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <p>Discount Percent: <%= discount.percentage %>,
    Quantity Threshold: <%= discount.quantity_threshold %>
    <%= link_to "Discount Show Page", "/merchant/#{discount.merchant_id}/bulk_discounts/#{discount.id}" %>
    <%= link_to "Delete Discount", "/merchant/#{discount.merchant_id}/bulk_discounts/#{discount.id}", method: :delete %></p>
  </div>
<% end %>